{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "paths": {
      "@moduprompt/api/*": ["apps/api/src/*"],
      "@moduprompt/web/*": ["apps/web/src/*"],
      "@moduprompt/compiler": ["packages/compiler/src/index.ts"],
      "@moduprompt/compiler/*": ["packages/compiler/src/*"],
      "@moduprompt/snippet-store": ["packages/snippet-store/src/index.ts"],
      "@moduprompt/snippet-store/*": ["packages/snippet-store/src/*"],
      "@moduprompt/types": ["packages/types/src/index.ts"],
      "@moduprompt/types/*": ["packages/types/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "build"]
}
