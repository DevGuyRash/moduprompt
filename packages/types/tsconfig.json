{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ES2021",
    "composite": true,
    "noEmitOnError": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "schema"]
}
