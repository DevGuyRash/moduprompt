{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2021",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "noEmitOnError": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "__tests__"]
}
