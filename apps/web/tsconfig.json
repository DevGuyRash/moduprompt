{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "react-jsx",
    "types": [
      "node",
      "vitest/importMeta"
    ],
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2021"
    ],
    "paths": {
      "@moduprompt/web/*": [
        "src/*"
      ],
      "@moduprompt/compiler": [
        "../../packages/compiler/src/index.ts"
      ],
      "@moduprompt/compiler/*": [
        "../../packages/compiler/src/*"
      ],
      "@moduprompt/snippet-store": [
        "../../packages/snippet-store/src/index.ts"
      ],
      "@moduprompt/snippet-store/*": [
        "../../packages/snippet-store/src/*"
      ],
      "@moduprompt/types": [
        "../../packages/types/src/index.ts"
      ],
      "@moduprompt/types/*": [
        "../../packages/types/src/*"
      ]
    }
  },
  "include": [
    "src",
    "vitest.config.ts"
  ]
}
