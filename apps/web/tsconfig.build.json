{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/lib",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": [
      "node",
      "vite/client"
    ],
    "declarationDir": "dist/lib",
    "emitDeclarationOnly": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/__tests__"
  ]
}
